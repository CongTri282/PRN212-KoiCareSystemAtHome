<Window x:Class="KoiCareSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400" Background="#FAF6E3"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <!-- Username Label and TextBox -->
            <TextBlock Text="User Name" Margin="0,0,0,5" FontWeight="Bold" />
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,20"/>

            <!-- Password Label and PasswordBox -->
            <TextBlock Text="Password" Margin="0,0,0,5" FontWeight="Bold" />
            <PasswordBox x:Name="PasswordTextBox" Height="30" Margin="0,0,0,20"/>

            <!-- Login Button with customized color -->
            <Button Content="Login" Height="35" Margin="0,0,0,10" Background="#B59F78" Foreground="White" Click="LoginButton_Click"/>

            <!-- Quit Button with customized color -->
            <Button Content="Quit" Height="35" Background="#B59F78" Foreground="White" Click="QuitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>